---
export interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  url: string;
}

const { title, description, image, tags, url } = Astro.props;
---

<div
  class="group relative overflow-hidden rounded-lg shadow-lg transition-all duration-300 hover:shadow-xl"
>
  <!-- Image with overlay on hover -->
  <div class="relative overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3
      class="text-xl font-bold mb-2 transition-colors duration-300 group-hover:text-blue-600"
    >
      {title}
    </h3>

    <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
      {description}
    </p>

    <div class="flex flex-wrap gap-2 mb-4">
      {
        tags.map((tag) => (
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-sm rounded-full">
            {tag}
          </span>
        ))
      }
    </div>

    <a
      href={url}
      class="inline-block font-medium text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 transition-colors duration-300"
    >
      View Project â†’
    </a>
  </div>
</div>
