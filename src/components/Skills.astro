---
// Skills.astro
const { skills } = Astro.props;
---

<section
  id="skills"
  class="py-16 rounded-xl mx-4 my-8 overflow-hidden relative"
  style="background-image: url('/images/Skills.png'); background-size: cover; background-position: center;"
>
  <!-- Semi-transparent overlay for better text readability -->
  <div class="absolute inset-0 bg-gray-800/70 dark:bg-gray-900/80"></div>

  <!-- Content container with relative positioning to appear above the overlay -->
  <div class="container mx-auto px-4 relative z-10">
    <h2 class="text-5xl mb-20 text-left text-white">MY SKILLS</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        skills ? (
          skills.map((skillGroup) => (
            <div class="bg-white/90 dark:bg-gray-700/90 p-6 rounded-lg shadow-md backdrop-blur-sm">
              <h3 class="text-xl font-semibold mb-4">{skillGroup.name}</h3>
              <ul class="space-y-2">
                {skillGroup.items.map((skill) => (
                  <li class="flex items-center">
                    <span class="w-2 h-2 bg-blue-500 rounded-full mr-2" />
                    <span>{skill}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        ) : (
          <p>Skills will be displayed here.</p>
        )
      }
    </div>
  </div>
</section>
